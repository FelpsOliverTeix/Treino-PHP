/*Ler um número inteiro entre 1 e 12 e escrever o mês que correspondente. Caso o número informado não corresponda aos 12 meses, informar que não existe mês com este número.*/

<?php
  $mes = [
  "Janeiro", "Fevereiro",
  "Março", "Abril",
  "Maio", "Junho",
  "Julho", "Agosto",
  "Setembro", "Outubro",
  "Novembro", "Dezembro"]; 

  $numMes = 8; // numero referente ao mes

  if($numMes >=1 && $numMes <=12){
    echo $mes[$numMes - 1];
  }else{
    echo "Mês inválido";
  }
 ?>
