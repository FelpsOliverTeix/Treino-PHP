$valor = -1;
$resultado = "";

if( $valor < 0){
  $resultado = "Valor Negativo!";
}
elseif($valor > 0){
  $resultado = "Valor Positivo!";
}
else{
  $resultado = "Resultado igual a Zero!";
}

echo $resultado; // Como a variavel $valor esta com o numero -1, a variavel $resultado nesse caso, vai exibir "Valor Negativo"
